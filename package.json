{
  "name": "mlb-notification",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "scripts": {
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --format=cjs --sourcemap --outdir=dist/main --external:electron",
    "build:preload": "esbuild src/main/preload.ts --bundle --platform=node --format=cjs --sourcemap --outdir=dist/main --external:electron",
    "build:renderer": "esbuild src/renderer/index.tsx --bundle --platform=browser --format=esm --sourcemap --outdir=dist/renderer --loader:.ts=ts --loader:.tsx=tsx --define:process.env.NODE_ENV=\"\\\"development\\\"\"",
    "build:static": "node scripts/copy-static.js",
    "build": "npm-run-all -p build:main build:preload build:renderer build:static",
    "clean": "rm -rf dist",
    "start": "npm run build && electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "electron": "^38.1.2",
    "esbuild": "^0.25.10",
    "esbuild-plugin-react-refresh": "^0.6.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "npm-run-all": "^4.1.5",
    "react-refresh": "^0.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^4.5.5"
  }
}
